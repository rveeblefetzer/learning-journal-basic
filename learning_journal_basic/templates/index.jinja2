{% extends "layout.jinja2" %}
{% block title %}rickv's learning journal{% endblock %}

{% block header %}
<header  class="intro-header" style="background-image: url('{{ request.static_path('learning_journal_basic:static/img/home-bg.jpg') }}')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Index HTML</h1>
                    <hr class="small">
                    <span class="subheading">An index of entries.</span>
                </div>
            </div>
        </div>
    </div>
    </header>

{% endblock %}


{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-preview">
    <section id="list-journal-entries-section-on-index">
        <h3>rickv's journal entries</h3>
        <ul>
            {% for item in ENTRIES %}
            <li><a href="/journal/{{ ENTRIES[item]['id'] }}" class="journal-titles-on-index">{{ ENTRIES[item]['title'] }}, {{ ENTRIES[item]['creation_date'] }}</a></li>
            {% endfor %}
        </ul>
    </section>
    </div>
    </div>
    </div>
    </div>
{% endblock %}