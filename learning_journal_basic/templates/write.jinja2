{% extends "layout.jinja2" %}
{% block title %}Learning Journal New Entry Page{% endblock %}

{% block body %}
    <h1>New Entry</h1>
        <section class="new-journal-entry">
            <form id="new-journal-entry" class="new-journal-entry-form">
                <h3>Write your journal entry below</h3>
                <div class="formsections">
                    <label for="title">Title:</label>
                    <input type="text" name="title" size="25"/>
                </div>
                <div class="formsections">
                    <label for="body">Body:</label>
                    <textarea form="new-journal-entry" type="text" name="body"></textarea>
                </div>
            </form>
            <button type="submit">Publish</button>
        </section>
{% endblock %}